
<body>
<div class="container">


<div style="margin-top:20px; margin-bottom:10px; text-align:center;"><%= link_to image_tag("logo.png", :alt => "Uvalue Logo"), root_path %></div>

<div style="text-align:center; margin-bottom: 30px;">
<%= link_to "User Sign Up", new_user_registration_path, class: "btn btn-medium btn-inverse" %>
<%= link_to "Merchant Sign Up", new_merchant_registration_path, class: "btn btn-medium btn-inverse" %>
</div>



			<div class="form-signin">

			<p style="text-align:center;">
			<%= link_to "Sign Up with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-medium btn-primary" %>
			<%= link_to "Sign Up with Twitter", user_omniauth_authorize_path(:twitter), class: "btn btn-medium btn-info" %>
			</p>


			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

			  <div>
			  <%= f.email_field :email, :autofocus => true, placeholder: "Email Address"%></div>

			  <div>
			  <%= f.password_field :password, placeholder: "Password" %></div>

			  <div>
			  <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %></div>

			  <div><%= f.submit "                          Sign up                           ", class: "btn btn-success btn-large" %></div>
			<% end %>
			</div>

<%= render "devise/shared/links" %>

</div></div>
