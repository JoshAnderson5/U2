<%= render 'dashboard/dashboard' %>

<div style="margin-left:15px;">
<div class="headerlinks"><%= link_to "My Presence", dashboard_mypresence_path %></div>
<div class="headerlinks"><%= link_to "Identity Verfication", dashboard_identity_path %></div>
<div class="headerlinks"><%= link_to "Reviews", dashboard_reviews_path %></div>
<div class="headerlinks"><%= link_to "References", dashboard_references_path %></div>
</div>
<!--<h1><%= @title %></h1>-->

<div class="body-center">
      <div class="span8">
          <div class="swell">
              <%= simple_form_for(resource, :as => current_user, :url => registration_path(current_user), :html => { :method => :put, :class => 'form-horizontal', :style => 'margin-right:0px;'}) do |f| %>
                <div style=" margin-left:10px;">
                <%= f.error_notification %>

                <%= f.input :first_name %> <%= f.input :last_name %>
                <%= f.input :gender, :collection => [['Male', 'Male'], ['Female', 'Female']], :as => :radio, label_html: {  class: 'radio-pad' } %>
                <%= f.input :birthdate, input_html: {  class: 'dropdown-date' } %>
                <%= f.input :email, autofocus: "true" %>
                <%= f.input :address %>
                <%= f.input :aboutme, label: "About Me", input_html: {  class: 'aboutme' } %>
                <%= f.input :password, label: "New Password",autocomplete: "off" %> 
                <%= f.input :password_confirmation, label: "New Password Confirmation",autocomplete: "off" %><br/>
                <%= f.input :current_password %>
                </div>
                <div class="form-actions">
                    <%= f.submit "Update", class: "btn btn-large btn-success" %>
                  </div>
                <% end %>
          </div>
      </div>
        
   <% @users.each do |user| %>
      <div class="span5" > 
          <div class="swell" style="height:250px;">
            Profile Picture<br/>
            <%= user.name %>
        
             <%= link_to image_tag(user.gravatar_url), profile_path(user) %>
          </div>

          <div class="swell" style="margin-top:150px;">
          <h3>Cancel my account</h3>

          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-medium btn-success" , :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
          </div>
      </div>
      		</div>
      </div>
</div>
<% end %>

</div>
</div>
<div style="margin-top:370px;">
</div>